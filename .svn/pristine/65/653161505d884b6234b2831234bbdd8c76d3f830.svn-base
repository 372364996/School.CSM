	-webkit-transform:translate(-50%,-50%);	
	}

.loginLogo h1 img{
	margin-top:10px;
	float:left;
	width:280px;
	}
.loginBox{
	width:746px;
	height:448px;
	background:url(../../images/logo/BLCUBoxbg1336.png) no-repeat left;
