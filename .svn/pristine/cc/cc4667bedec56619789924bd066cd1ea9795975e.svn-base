@charset "utf-8";
/* CSS Document */
*{
	margin:0;
	padding:0;
	}
body{
	margin:0;
	padding:0;
	background:#686a73;
	font-size:14px;
	font-family:"微软雅黑";
	overflow:hidden;
	position:relative;
	}
h1,h2,h3,ul,li,img,input{
	border:none;
	list-style:none;
	}


.loginbg>img{
	height:975px;
	position:absolute;
	z-index:-999;
	}
.loginLogo{
	width:900px;/*随LOGO变动*/
	margin:0 auto;
	z-index:998px;
	padding-top:110px;/*可调*/
	}
.loginLogo div{
	width:300px;/*随LOGO变动*/
	height:93px;
	z-index:999;
	display:block;
	float:left;
	}
.loginLogo h1{
	width:660px;
	height:70px;
	margin:0 auto;
	z-index:999;
	position: absolute; 
	top:74px;
	left: 50%;
	transform:translate(-50%,-50%);
	-webkit-transform:translate(-50%,-50%);	
	}

.loginLogo h1 img{
	width:524px;
    height:48px; 
	margin-top:10px;
	float:right;
	}
.loginBox{
	width:842px;
	height:448px;
	background:url(../../images/logo/BLCUBoxbg1336.png) no-repeat left;
	z-index:999px;
	position: absolute; 
	top:373px;
	left: 50%;
	transform:translate(-50%,-50%);
	-webkit-transform:translate(-50%,-50%);	
	margin:0 auto;
	}
.loginBox .loginulOne{
	width:190px;
	height:110px;
	float:right;
	margin:268px 97px 0px 0px;
	}
/*.loginBox .loginulOne .input_username{
	background-color:#5097b3;
	border:none;
	}*/
.loginBox .loginulOne li input{
    width: 155px;
    height: 22px;
    line-height: 22px;
    margin-bottom: 19px;
	}
.loginBox .loginulTwo{
	width:300px;
	height:30px;
	float:right;
	margin:345px -245px 10px 0px;
	padding-left:60px;
	}
.loginBox .loginulTw ul{
	margin:0;
	padding:0;
	}
.loginBox .loginulTwo li{
	width: 83px;
	height:23px;
	background: transparent url(../../images/logo/loginBtn.png) no-repeat scroll 0% 0%;
	float: left;
	line-height: 23px;
	margin-left: 33px;
	color: #FFF;
	text-align: center;
	cursor: pointer;
	}


@media (min-width:1366px) and (max-width:1650px){
	.loginBox .loginulOne {margin: 258px 160px 0px 0px;}
	.loginBox .loginulTwo{margin:345px -245px 10px 0px;}
}

